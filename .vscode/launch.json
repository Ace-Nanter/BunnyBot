  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serve web-app",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/apps/web-app",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "web-app"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serve bot",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/apps/bot",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "bot"]
    }
  ]
}
